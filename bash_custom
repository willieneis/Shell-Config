#screen stuff
if [[ $TERM == "screen" ]]
  then
    export PS1="${debian_chroot:+($debian_chroot)}\u@\h:\w\$ "
  fi

# set python path
PATH="/Library/Frameworks/Python.framework/Versions/7.2/bin:${PATH}"

#Gnome alias for portability
if [[ $DESKTOP_SESSION == "gnome" ]]
  then
    alias open="gnome-open"
  fi

if [ -f ~/.bash_github ]; then 
   . ~/.bash_github
  fi

#export PATH="/usr/local/bin:$PATH"

alias fuck='wget -qO - rage.thewaffleshop.net' 
alias ls='ls -GF'

# VI mode!
set -o vi

for script in ~/.bash_scripts/*;
do
    source $script
done

# la alias
alias la='ls -lahFG'

# Open mvim files in new tab
alias v=mvim

# rm safety net alias for the nub
alias rm='rm -i'

# mid file print function
mid() {
    if [ $# -eq 2 ]
        then
            tail -n +"$2" "$1" | head -n 1
    fi
    if [ $# -eq 3 ]
        then
            tail -n +"$2" "$1" | head -n "$3"
    fi
}
